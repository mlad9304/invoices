<p id="notice"><%= notice %></p>

<div class="row justify-content-md-center">
  <div class="col col-md-8">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">INVOICES</h3>
      </div>
      <div class="card-body">
        <p>
          <strong>Amount:</strong>
          <%= @invoice.amount %>
        </p>

        <p>
          <strong>Company:</strong>
          <%= @invoice.company %>
        </p>

        <p>
          <strong>Contragent:</strong>
          <%= @invoice.contragent %>
        </p>

        <p>
          <strong>Currency:</strong>
          <%= @invoice.currency %>
        </p>

        <p>
          <strong>Date:</strong>
          <%= @invoice.date %>
        </p>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_invoice_path(@invoice), class: "btn btn-danger" %>
        <%= link_to 'Back', invoices_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>




